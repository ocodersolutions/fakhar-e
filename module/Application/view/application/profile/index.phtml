            });
            $('html, body').animate({
                scrollTop: $("#listCASUAL").offset().top - 200
            }, 500);
            return false;
        }

        $(".thumb-info").each(function (index, element) {
            if ($(element).hasClass("lock")) {
                $("#" + element.id + "Input").prop("checked", true);
